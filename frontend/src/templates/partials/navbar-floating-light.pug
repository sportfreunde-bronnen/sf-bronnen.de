    .d-flex.align-items-center.order-lg-3.ms-lg-auto
      a(href='#modal-signin' data-bs-toggle='modal' data-view='#modal-signup-view')&attributes(isNavbarButtonLight ? {'class': 'btn btn-translucent-light ms-grid-gutter d-none d-lg-inline-block navbar-btn'} : {'class': 'btn btn-primary ms-grid-gutter d-none d-lg-inline-block navbar-btn'}) Kontakt
